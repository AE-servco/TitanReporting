inv_options = {
    'totalGreater': 6439,
    'createdOnOrAfter': '2025-10-01',
    'createdBefore': '2025-11-02'
}


inv_dfs = {}
for state, ds in data_services.items():
    inv_dfs[state] = pd.DataFrame(ds.get_api_data('accounting', 'invoices', options=inv_options))


